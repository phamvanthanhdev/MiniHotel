<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">
            <ImageView
                android:id="@+id/imgHangPhong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTenHangPhong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biển mỹ khê"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtLoaiPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Phòng đơn"
                        android:textColor="@color/gray2"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txtKieuPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/noto_sans"
                        android:text="Phòng đơn"
                        android:textColor="@color/gray2"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtSoLuongTrong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chỉ còn 10 phòng"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/noto_sans"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:gravity="end">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDatPhong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_blue"
                        android:text="Đặt ngay"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="7dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtGiaHienTai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="300.000 VNĐ"
                    android:textColor="@color/red"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textDirection="anyRtl"/>

                <TextView
                    android:id="@+id/txtGiaKhuyenMai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="300.000 VND"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>